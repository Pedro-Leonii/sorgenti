\newenvironment{registromodifiche}
    {
        \thispagestyle{plain}
        \newgeometry{ignoreall, hmargin=20pt}
        \table[!h]
            \center
            \caption*{\textbf{\Large Registro delle Modifiche}}
            \tabularx{\textwidth}{| c | c | C | C | C |}
                \hline
                    \textbf{\normalsize Versione} & 
                    \textbf{\normalsize Data} & 
                    \textbf{\normalsize Autore/i} & 
                    \textbf{\normalsize Verificatore} &
                    \textbf{\normalsize Descrizione} \\ 
                \hline \hline
        }
        {
            \endtabularx
            \endcenter
            \endtable
        \restoregeometry
        }
